// Text, Background, Shadow Variant
for name, value in theme-colors
  .text-{name}
    color value
  .bg-{name}
    background-color value
  .shadow-{name}
    box-shadow 0 .5rem 1rem rgba(value,.15)!important
  .button-{name}
    background-color value

// Margin and Padding
for i in range(0,12, 1)
  .m-{i}
    margin i * .25rem !important
  .ml-{i}
    margin-left i * .25rem !important
  .mr-{i}
    margin-right i * .25rem !important
  .mt-{i}
    margin-top i * .25rem !important
  .mb-{i}
    margin-bottom i * .25rem !important
  .mx-{i}
    margin-right i * .25rem !important
    margin-left i * .25rem !important
  .my-{i}
    margin-top i * .25rem !important
    margin-bottom i * .25rem !important

  .m-n{i}
    margin -(i * .25rem) !important
  .ml-n{i}
    margin-left -(i * .25rem) !important
  .mr-n{i}
    margin-right -(i * .25rem) !important
  .mt-n{i}
    margin-top -(i * .25rem) !important
  .mb-n{i}
    margin-bottom -(i * .25rem) !important

  .p-{i}
    padding i * .25rem !important
  .pl-{i}
    padding-left i * .25rem !important
  .pr-{i}
    padding-right i * .25rem !important
  .pt-{i}
    padding-top i * .25rem !important
  .pb-{i}
    padding-bottom i * .25rem !important
  .px-{i}
    padding-right i * .25rem !important
    padding-left i * .25rem !important
  .py-{i}
    padding-top i * .25rem !important
    padding-bottom i * .25rem !important

for name, width in $grid-breakpoints
  @media (min-width width)
    for i in range(0,12, 1)
      .m-{name}-{i}
        margin i * .25rem !important
      .ml-{name}-{i}
        margin-left i * .25rem !important
      .mr-{name}-{i}
        margin-right i * .25rem !important
      .mt-{name}-{i}
        margin-top i * .25rem !important
      .mb-{name}-{i}
        margin-bottom i * .25rem !important
      .mx-{name}-{i}
        margin-right i * .25rem !important
        margin-left i * .25rem !important
      .my-{name}-{i}
        margin-top i * .25rem !important
        margin-bottom i * .25rem !important

      .m-{name}-n{i}
        margin -(i * .25rem) !important
      .ml-{name}-n{i}
        margin-left -(i * .25rem) !important
      .mr-{name}-n{i}
        margin-right -(i * .25rem) !important
      .mt-{name}-n{i}
        margin-top -(i * .25rem) !important
      .mb-{name}-n{i}
        margin-bottom -(i * .25rem) !important

      .p--{name}{i}
        padding i * .25rem !important
      .pl-{name}-{i}
        padding-left i * .25rem !important
      .pr-{name}-{i}
        padding-right i * .25rem !important
      .pt-{name}-{i}
        padding-top i * .25rem !important
      .pb-{name}-{i}
        padding-bottom i * .25rem !important
      .px-{name}-{i}
        padding-right i * .25rem !important
        padding-left i * .25rem !important
      .py-{name}-{i}
        padding-top i * .25rem !important
        padding-bottom i * .25rem !important

.m-auto
  margin auto !important
.ml-auto
  margin-left auto !important
.mr-auto
  margin-right auto !important
.mt-auto
  margin-top auto !important
.mb-auto
  margin-bottom auto !important

// Display
.flex
  display flex
.block
  display block
.inline-block
  display inline-block
.inline
  display inline

// Flex Justify
.justify-between
  justify-content space-between !important
.justify-end
  justify-content flex-end !important
.justify-start
  justify-content flex-start !important
.justify-center
  justify-content center !important


// Border Radius
.rounded
  border-radius .5rem
.rounded-lg
  border-radius 1rem
.rounded-full
  border-radius 5rem

// Text Align
.text-center
  text-align center
.text-left
  text-align left
.text-right
  text-align right
.text-justify
  text-align justify

// Font Weight
.text-bold
  font-weight bold
.text-normal
  font-weight normal

// Position
.relative
  position relative
.absolute
  position absolute
.fixed
  position fixed
.bottom
  bottom 0
.top
  top 0
.left
  left 0
.right
  right 0

// Shadow
.shadow
  box-shadow 0 .5rem 1rem rgba(0,0,0,.15)!important
.shadow-sm
  box-shadow 0 .125rem .25rem rgba(0,0,0,.075)!important
.shadow-lg
  box-shadow 0 1rem 3rem rgba(0,0,0,.175)!important

// Input
.checkbox
  position relative
  display inherit
  max-height 20px
  input
    opacity 0
    height 0
    width 0
    &:checked ~ .checkbox-input
      border-color $success
      &::after
        display block
  .checkbox-input
    display inline-block
    width 20px
    height 20px
    border 2px solid #ccc
    margin-right 5px
    cursor pointer
    &::after
      content ""
      position absolute
      display none
      left 7px
      top 2px
      width 4px
      height 10px
      border solid $success
      border-width 0 2px 2px 0
      transform rotate(45deg)
  .checkbox-title
    cursor pointer

.box
  border 2px solid #ccc
  padding .8rem
  color #666
  position relative
  &.active
    background-color rgba($success, 10%)
    border-color $success
    color #000
    &::after
      content ''
      position absolute
      right 1.2rem
      top 1.3rem
      width 6px
      height 14px
      border solid $success
      border-width 0 2px 2px 0
      transform rotate(45deg)
  &.no-price
    padding 1.39rem .8rem
  span
    display block

.border
  border 1px solid #d8d8d8
  width 80px

.counter-caracter
  font-size 12px

.mr-n20
  margin-right  -5.5rem

@media (min-width 768px)
  .vertical-center
    margin-top 6rem
  .justify-center-md
    justify-content center !important
  .content-center
    text-align center
